{% extends 'base.html.twig' %}

{% block title %}Liste des comptes étudiants{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Liste des comptes étudiants</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            {% if students|length > 0 %}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for student in students %}
                            <tr>
                                <td>{{ student.id }}</td>
                                <td>{{ student.email }}</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-info">
                    Aucun compte étudiant trouvé.
                </div>
            {% endif %}
        </div>
    </div>
    
    <div class="mt-3">
        <a href="{{ path('app_admin_users_students') }}" class="btn btn-primary">
            <i class="fas fa-sync"></i> Rafraîchir
        </a>
    </div>
</div>
{% endblock %} 